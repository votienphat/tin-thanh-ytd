@using Phystones.Helper
@model BusinessObject.WebModule.Models.Config.ContactConfigModel
    

<div class="panel-body" id="contactConfig">
    @using (Ajax.BeginForm("ConfigContact", "Config", new AjaxOptions
    {
        HttpMethod = "POST",
        UpdateTargetId = "contactConfig"
    }, new { @class = "form-horizontal form-groups-bordered" }))
    {
        <div class="form-group">
            <label class="control-label">Điện thoại</label>
            @Html.TextBoxFor(x => x.Phone, new { @placeholder = "Điện thoại", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Phone)

        </div>
        <div class="form-group">
            <label class="control-label">Liên kết Facebook</label>
            @Html.TextBoxFor(x => x.Facebook, new { @placeholder = "Liên kết Facebook", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Facebook)
        </div>
        <div class="form-group">
            <label class="control-label">Email</label>
            @Html.TextBoxFor(x => x.Email, new { @placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group">
            <label class="control-label">Skype</label>
            @Html.TextBoxFor(x => x.Skype, new { @placeholder = "Skype", @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Skype)
        </div>
        <div class="form-group">
            <label class="control-label">Nội dung footer</label>
            @Html.TextAreaFor(x => x.FooterContent, new { @placeholder = "Nội dung footer", @class = "form-control", @rows = "5" })
            @Html.ValidationMessageFor(x => x.FooterContent)
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Save</button>
        </div>
    }
</div>

@if(ViewBag.Success != null){ 
    <script>
        var opts = {
            "closeButton": true,
            "debug": false,
            "positionClass": "toast-top-right",
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
        toastr.success("Cập nhật thành công.", "Thông Báo", opts);
    </script>    
}


