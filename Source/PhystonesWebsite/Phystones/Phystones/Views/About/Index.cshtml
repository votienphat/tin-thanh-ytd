    <h2>The Players</h2>
    <div class="list-hex-grid large clearfix">
        @foreach (var item in ViewBag.Portfolio)
        {
            <div class="hex grid-4 invert secondary" style="opacity: 1;">
                <a onclick="OpenPopupPortfolio(@item.Id)" style="background-image: url(@item.Avatar);">
                    <div class="inner">
                        <h3>@item.Name</h3>
                        <hr class="grid-1 center">
                        <p>@item.CategoryName</p>
                    </div>
                    <div class="hex-1"><span class="after"></span></div>
                    <div class="hex-2"><span class="after"></span></div>
                    <span class="after"></span>
                </a>
            </div>
