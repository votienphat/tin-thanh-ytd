@using MyAdmin.Helper
@model BusinessObject.MembershipModule.Enums.AdminUserModel
@{
    Layout = "~/Views/Shared/Metronic/_MainLayout.cshtml";
    ViewBag.Title = "Quản lý thông tin Admin";
}

<h3 class="page-title">
    Quản lý thông tin Admin
</h3>
<div class="outer">
    <div class="inner bg-light lter">
        <div class="row">
            <div class="col-lg-12">
                <div class="box">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                Thông tin
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="form-group">
                                @*<button class="btn btn-primary" type="button" onclick="OpenPopup('Thêm thành viên', '@Url.Action("PopupAdminUserManager", "Membership", new { userId = 0 })', 750);">Thêm thành viên</button>*@
                                <button class="btn btn-primary" type="button" onclick="OpenPopup('Thêm thành viên', '@Url.Action("PopupAdminUserManager", "Membership", new { userId = 0 })', 750);">Thêm thành viên</button>
                            </div>
                            <table class="table table-striped table-bordered" id="myTable"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles
{
    <link href="@Url.ContentVersion("~/Content/Metronic/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css")" rel="stylesheet" type="text/css" />
}

@section scripts{
    <script src="@Url.ContentVersion("~/Content/Metronic/assets/global/plugins/datatables/media/js/jquery.dataTables.min.js")" type="text/javascript"></script>
    <script src="@Url.ContentVersion("~/Content/Metronic/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var oTable;
        $(document).ready(function () {
            oTable = $('#myTable')
                .dataTable({
                    "serverSide": true,
                    "processing": true,
                    "filter": false,
                    "ajax": {
                        "url": '@Url.Action("GetListUser", "Membership")',
                        'data': function (d) {
                        },
                        "type": "POST",
                        "dataSrc": function (json) {
                            if (!checkRight(json)) {
                                json = { iTotalRecords: 0, iTotalDisplayRecords: 0, sEcho: 1, aaData: [] };
                            }
                            return json.aaData;
                        }
                    },
                    "columns": [
                        {
                            "data": "STT",
                            "title": "STT",
                            "className": "align-center",
                            "width": "50px",
                            "orderable": false
                        },
                        {
                            "data": "ID",
                            "title": "ID",
                            "className": "align-center",
                            "width": "50px",
                            "orderable": false
                        },
                        {
                            "data": "NickName",
                            "title": "Tên",
                            "className": "align-left"
                        },
                        {
                            "data": "Email",
                            "title": "Email",
                            "className": "align-left",
                            "orderable": false
                        },
                        {
                            "data": "GroupName",
                            "title": "Nhóm",
                            "className": "align-left",
                            "width": "120px",
                            "orderable": false
                        },
                        {
                            "data": "CreatedDate",
                            "title": "Ngày tạo",
                            "width": "120px",
                            "className": "align-left"
                        },
                        {
                            "data": "LastLoginDate",
                            "title": "Ngày đăng nhập cuối",
                            "width": "120px",
                            "className": "align-left"
                        }
                    ],
                    "lengthMenu": DataTablesConst.LengthMenu,
                    "pageLength": DataTablesConst.PageLength,
                    "order": [
                        [2, "asc"]
                    ]
                });
        });
    </script>
}
